@{
    ViewData["Title"] = "Recover Account";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - User.Api</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen flex items-center justify-center p-4">
    <div class="max-w-md w-full">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-2">Account Recovery</h1>
            <p class="text-gray-600">Use your recovery code to regain access</p>
        </div>

        <!-- Recovery Card -->
        <div class="bg-white rounded-2xl shadow-xl p-8">
            <form method="post" asp-action="RecoverAccount" asp-controller="Account">
                <!-- Validation Summary -->
                <div asp-validation-summary="All" class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg text-red-800 text-sm" style="display:none;"></div>

                <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-blue-700">
                                Enter your account name and one of your recovery codes to regain access.
                                Each code can only be used once.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Account Field -->
                <div class="mb-6">
                    <label for="account" class="block text-sm font-medium text-gray-700 mb-2">
                        Account
                    </label>
                    <input
                        type="text"
                        id="account"
                        name="account"
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200"
                        placeholder="Enter your account"
                        autocomplete="username"
                    />
                </div>

                <!-- Recovery Code Field -->
                <div class="mb-6">
                    <label for="recoveryCode" class="block text-sm font-medium text-gray-700 mb-2">
                        Recovery Code
                    </label>
                    <input
                        type="text"
                        id="recoveryCode"
                        name="recoveryCode"
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 font-mono text-lg tracking-wider"
                        placeholder="XXXXXXXX"
                        maxlength="8"
                        style="text-transform: uppercase;"
                    />
                    <p class="mt-2 text-sm text-gray-500">Enter the 8-character recovery code</p>
                </div>

                <!-- Submit Button -->
                <button
                    type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-200 transform hover:scale-[1.02] active:scale-[0.98]"
                >
                    Recover Account
                </button>

                <!-- Back to Login -->
                <div class="mt-6 text-center">
                    <a href="@Url.Action("Login", "Account")" class="text-sm text-blue-600 hover:text-blue-800 font-medium">
                        &larr; Back to Login
                    </a>
                </div>
            </form>
        </div>

        <!-- Footer -->
        <p class="mt-8 text-center text-sm text-gray-500">
            &copy; 2025 User.Api. All rights reserved.
        </p>
    </div>

    <script>
        // Show validation summary if there are errors
        document.addEventListener('DOMContentLoaded', function() {
            const validationSummary = document.querySelector('[asp-validation-summary]');
            if (validationSummary && validationSummary.querySelector('li')) {
                validationSummary.style.display = 'block';
            }

            // Auto-uppercase recovery code input
            const recoveryCodeInput = document.getElementById('recoveryCode');
            recoveryCodeInput.addEventListener('input', function(e) {
                e.target.value = e.target.value.toUpperCase();
            });
        });
    </script>
</body>
</html>
