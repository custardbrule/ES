@{
    ViewData["Title"] = "Authorization Required";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - User.Api</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body class="bg-linear-to-br from-blue-50 to-indigo-100 min-h-screen flex items-center justify-center p-4">
    <div class="max-w-md w-full">
        <!-- Logo/Brand Section -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-2">User.Api</h1>
            <p class="text-gray-600">Authorization Request</p>
        </div>

        <!-- Consent Card -->
        <div class="bg-white rounded-2xl shadow-xl p-8">
            <div class="text-center mb-6">
                <div class="mx-auto w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-4">
                    <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                </div>
                <h2 class="text-2xl font-bold text-gray-900 mb-2">Authorization Request</h2>
                <p class="text-gray-600">
                    <strong class="text-gray-900">@ViewBag.ApplicationName</strong> is requesting access to your account
                </p>
            </div>

            <!-- Requested Permissions -->
            <div class="mb-6">
                <h3 class="text-sm font-semibold text-gray-700 mb-3">This application will be able to:</h3>
                <ul class="space-y-2">
                    @{
                        var scopes = ViewBag.Scopes as string[] ?? Array.Empty<string>();
                    }
                    @foreach (var scope in scopes)
                    {
                        <li class="flex items-start">
                            <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            <span class="text-sm text-gray-700">@GetScopeDescription(scope)</span>
                        </li>
                    }
                </ul>
            </div>

            <!-- User Info -->
            <div class="mb-6 p-4 bg-gray-50 rounded-lg">
                <p class="text-xs text-gray-500 mb-1">Signed in as</p>
                <p class="text-sm font-medium text-gray-900">@ViewBag.UserAccount</p>
            </div>

            <!-- Action Buttons -->
            <form method="post" asp-action="Authorize" asp-controller="Auth">
                @if (Context.Request.HasFormContentType)
                {
                    @foreach (var param in Context.Request.Form)
                    {
                        <input type="hidden" name="@param.Key" value="@param.Value" />
                    }
                }
                else
                {
                    @foreach (var param in Context.Request.Query)
                    {
                        <input type="hidden" name="@param.Key" value="@param.Value" />
                    }
                }

                <div class="flex gap-3">
                    <button
                        type="submit"
                        name="consent"
                        value="deny"
                        class="flex-1 bg-white border-2 border-gray-300 hover:border-gray-400 text-gray-700 font-semibold py-3 px-4 rounded-lg transition duration-200"
                    >
                        Deny
                    </button>
                    <button
                        type="submit"
                        name="consent"
                        value="allow"
                        class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-200 transform hover:scale-[1.02] active:scale-[0.98]"
                    >
                        Allow Access
                    </button>
                </div>
            </form>
        </div>

        <!-- Footer -->
        <p class="mt-8 text-center text-sm text-gray-500">
            By allowing access, you agree to share the above information with this application.
        </p>
    </div>
</body>
</html>

@functions {
    string GetScopeDescription(string scope)
    {
        return scope switch
        {
            "openid" => "Access your basic profile information",
            "email" => "Access your email address",
            "profile" => "Access your profile information",
            "roles" => "Access your roles and permissions",
            "offline_access" => "Access your data when you're not online",
            _ => $"Access {scope}"
        };
    }
}
